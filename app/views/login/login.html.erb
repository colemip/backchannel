<h1>Login Below</h1>
<div class="login_flash_notice"><%= notice %></div>

<% form_tag do |f| %>
<p>
	<label for="login">Login ID:</label>
	<%= text_field_tag :login, params[:login] %>
</p>
<p>
	<label for="pw">Password:</label>
	<%= password_field_tag :pw, params[:pw] %>
</p>
<p>
	<%= submit_tag "Login", :action => "error" %>	
</p>
<br />
<%= link_to "Create New Account", :action => "create_account" -%>
<% end %>
